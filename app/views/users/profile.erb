<h1>Profile</h1>
<p>for <%= @user.username %></p>


<% if @current_user.id == (params[:id]).to_i %>
<div>
  <form method="link" action="/profile/<%= auth_current_user.id %>/select">
    <input class="btn" type="submit" value="Create Character"/>
  </form>
</div>
<% end %>


<!-- If select character, lead to character page -->
<p>List all characters:</p>

<!-- route to a certain character if selected -->
<% @all_characters.each do |char| %>
  <li><a href="/profile/<%= auth_current_user.id %>/character/<%= char.id %>"><%= char.name %></a></li>
<% end %>
