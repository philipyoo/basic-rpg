<% @skip_header = true %>
<% @skip_footer = true %>

<h1>Register yo</h1>

<% if @form_error %>
  <div><%= @form_error %></div>
<% end %>

<div class="row">
  <form action="/register" method="POST">

    <div class="row">
      <% if @user.errors[:username].any? %>
        <div>Name <%= @user.errors[:username].first %></div>
      <% end %>

      <div class="input-field col s4">
        <input class="validate" id="username" name="username" type="text"  />
        <label for="username">Username</label>
      </div>
    </div>

    <div class="row">
      <% if @user.errors[:password].any? %>
        <div>Password <%= @user.errors[:password].first %></div>
      <% end %>

      <div class="input-field col s4">
        <input class="validate" id="password" name="password" type="password" />
        <label for="password">Password</label>
      </div>
    </div>



    <div class="row">
      <% if @user.errors[:password_confirmation].any? %>
        <div><%= @user.errors[:password_confirmation].first %></div>
      <% end %>

      <div class="input-field col s4">
        <input class="validate" id="password" name="password_confirmation" type="password" />
        <label for="password_confirmation">Confirm Password</label>
      </div>
    </div>

    <div>
      <input class="btn" type="submit" name="action" value="Register" />
      <a class="btn" href="/">Cancel</a>
    </div>
  </form>
</div>
